   <%- include('./includes/head.ejs') %>
  </head>
  <body>
    <%- include('./includes/nav.ejs') %>
 <main class="container">

      <!-- navigation to user controls -->
      <%- include('./includes/sidebar.ejs') %>
    
      <!-- MAIN FORM -->
        <div class="col-md-12 mx-auto">
        <div class="col-md-6  ps-3 bg-white rounded mx-auto">
            <form method="POST" action="/dashboard/edit-profile" enctype="multipart/form-data">
                <div class="form-floating p-2 my-3">
                    <input type="text" class="form-control" id="first-input" name="firstname" value="<%= userData.first_name %>">
                    <label for="first-input">Firstname</label>
                </div>

                <div class="form-floating p-2 my-3">
                    <input type="text" class="form-control" id="last-input" name="lastname" value="<%= userData.last_name %>">
                    <label for="last-input">Lastname</label>
                </div>

                <div class="form-floating p-2 my-3">
                    <input type="text" class="form-control" id="username-input" name="username" value="<%= userData.username %>">
                    <label for="username-input">Username</label>
                </div>
                <% if(userData.password_chances > 0){ %>
                <div class="form-floating p-2 my-3">
                    <input type="password" class="form-control" id="pass-input" name="password" value="<%= userData.password %>">
                    <label for="pass-input">Password</label>
                </div>
           <% } else { %>
                 <div class="form-floating p-2 my-3">
                    <input type="text" class="form-control" id="pass-input" name="" value="Already Exceeded Password Chances" disabled readonly >
                    <input type="hidden" name="password" value="<%= userData.password %>">
                    <label for="pass-input">Password</label>
                </div>
          <%  } %>
                <div class="my-4">
              <input class="form-control"  type="file" name="profile-pic" />
            </div>
                <button class="w-25 btn btn-outline-dark" type="submit">Edit Details</button>
            </form>
       

        </div>
        </div>
    </main>
<%- include('./includes/end.ejs') %>