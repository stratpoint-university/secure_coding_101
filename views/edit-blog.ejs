   <%- include('./includes/head.ejs') %>
  </head>
  <body>
    <%- include('./includes/nav.ejs') %>
    
    <main class="container">

      <!-- SIDEBAR -->
      <%- include('./includes/sidebar.ejs') %>
    
      <!-- MAIN FORM -->
        <div class="col-md-9 mt-5 mx-auto">
          <form action="/dashboard/blog/<%= blogData._id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3 mx-auto text-center">
              <input type="text" class="form-control-lg w-50" placeholder="Blog Title" name="title" value="<%=blogData.title %>">
        
            </div>

              <div class="mb-3">
              <textarea name="content" id="blog-content" cols="30" rows="10" class="form-control-lg w-100" placeholder="Blog body"><%= blogData.description %></textarea>
            </div>

            <div class="mb-3">
              <input class="form-control w-20"  type="file" name="image">
            </div>

            <div class="form-check form-switch">
                <input type="checkbox" name="isDeleted" id="delete-radio" class="form-check-input">
                <label for="delete-radio" class="form-check-label">Delete Blog</label>
            </div>

            <div class="form-check form-switch">
                <%if(blogData.is_draft){ %>
                <input type="checkbox" name="isDraft" id="draft-check" class="form-check-input" checked>
                <label for="draft-check" class="form-check-label">Currently In Draft</label>
                <%} else{ %>
                    <input type="checkbox" name="isDraft" id="draft-check" class="form-check-input">
                <label for="draft-check" class="form-check-label">Currently In Draft</label>
                <% } %>
            </div>

            <button type="submit" class="btn btn-dark">Submit</button>

          </form>

        </div>
    </main>
<%- include('./includes/end.ejs') %>